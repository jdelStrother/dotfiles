#!/bin/bash

git fetch --prune

# stuff with a '+' prefix is a worktree, '*' is checked out
BRANCHES=$(git branch --merged | egrep -v "(^(\*|\+)|master)")
if [[ -n $BRANCHES ]]; then
  git branch -d $BRANCHES
fi

REMOTE_BRANCHES=$(git branch -r --merged origin/master |  grep origin | egrep -v '>|master|develop|production|staging' | cut -d/ -f2-)
if [[ -n $REMOTE_BRANCHES ]]; then 
  git push origin --delete $REMOTE_BRANCHES
fi
