[user]
	name = Jonathan del Strother
	email = jon.delStrother@bestbefore.tv
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[core]
	legacyheaders = false
	excludesfile = /Users/jon/.gitignore
[repack]
	usedeltabaseoffset = true
[alias]
	st = status
	ci = commit
	co = checkout
	ss = !git stash && git stash apply
[merge]
	tool = opendiff
[branch]
	autosetupmerge = true
[diff]
  mnemonicprefix = true
[init]
  post-init = /Users/jon/bin/git_post_init


[mergetool "p4merge"]
    # I put p4merge and DiffMerge in /Applications/Utilities, but you might have them in /Applications.
    cmd = /Applications/Utilities/p4merge.app/Contents/Resources/launchp4merge \
        "$PWD/$BASE" \
        "$PWD/$REMOTE" \
        "$PWD/$LOCAL" \
        "$PWD/$MERGED" 
    keepBackup = false
    trustExitCode = false

[mergetool "diffmerge"]
    cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge \
        --nosplash \
        --result="$PWD/$MERGED" \
        "$PWD/$BASE" \
        "$PWD/$REMOTE" \
        "$PWD/$LOCAL" 
    keepBackup = false
    trustExitCode = false
