[user]
	name = Jonathan del Strother
	email = jon.delStrother@bestbefore.tv
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[core]
	legacyheaders = false
	excludesfile = /Users/jon/.gitglobalignore
[repack]
	usedeltabaseoffset = true
[alias]
	st = status
	ci = commit
	co = checkout
	ss = !git stash && git stash apply
	up = !git fetch origin && git log HEAD...origin/master --pretty=oneline --reverse --left-right && git checkout origin/master
	upr = !git fetch origin && git log HEAD...origin/master --pretty=oneline --reverse --left-right && git rebase origin/master
[merge]
	tool = opendiff
[rerere]
	enabled = 1
[branch]
	autosetupmerge = 1
[instaweb]
    local = true
    httpd = webrick
    port = 4321
    browser = open
[sendemail]
	smtpserver = mail.bestbefore.tv
	smtpuser = jon.delStrother
	smtppass = Jade613A
[apply]
	whitespace = fix

[mergetool "p4merge"]
    # I put p4merge and DiffMerge in /Applications/Utilities, but you might have them in /Applications.
    cmd = /Applications/Utilities/p4merge.app/Contents/Resources/launchp4merge \
        "$PWD/$BASE" \
        "$PWD/$REMOTE" \
        "$PWD/$LOCAL" \
        "$PWD/$MERGED" 
    keepBackup = false
    trustExitCode = false

[mergetool "diffmerge"]
    cmd = /Applications/Utilities/DiffMerge.app/Contents/MacOS/DiffMerge \
        --nosplash \
        --result="$PWD/$MERGED" \
        "$PWD/$BASE" \
        "$PWD/$REMOTE" \
        "$PWD/$LOCAL" 
    keepBackup = false
    trustExitCode = false
