#!/bin/bash -e

DIRS="/Users/jon/Developer/web /Users/jon/Developer/terraform /Users/jon/Developer/imgn /Users/jon/Developer/jenkins-docker"
STANDUP_ARGS=$*

for dir in $DIRS; do
  if [[ -d $dir ]]; then
    cd $dir
    work=$(git standup $STANDUP_ARGS)
    if [[ ${work} ]]; then
        printf "==== $dir =====\n$work\n"
    fi
  fi
done
