#!/usr/bin/env ruby

require 'date'
today = Date.today
previous_day = if today.cwday == 1
                 today - (ARGV[0] || 3).to_i
               else
                 today - (ARGV[0] || 1).to_i
               end

puts "Since #{previous_day}"
exec("git lg --author=Jon --since={#{previous_day}} --all")
